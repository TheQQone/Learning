/**index.wxss**/
.container {
  padding: 30rpx;
}

.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-info-section {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  margin-top: 10rpx;
  color: #333;
  font-size: 32rpx;
}

.login-btn {
  margin: 20rpx 0;
  background-color: #3B7CF7;
  color: #fff;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 40rpx;
}

.welcome-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666;
}

.features-section {
  width: 100%;
  margin: 20rpx 0 40rpx 0;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.features-grid {
  display: flex;
  flex-direction: column;
}

.feature-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.feature-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-icon-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.feature-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.feature-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 6rpx;
}

.feature-description {
  font-size: 24rpx;
  color: #999;
}

.feature-arrow {
  margin-left: 20rpx;
}

.arrow-icon {
  color: #ccc;
  font-size: 32rpx;
}

.about-section {
  width: 100%;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.about-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
  display: block;
}

.about-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
} 