/**profile.wxss**/
.container {
  min-height: 100vh;
  background-color: #f7f7f7;
}

.profile-header {
  background-color: #3B7CF7;
  height: 300rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.user-info {
  display: flex;
  align-items: center;
  color: #fff;
}

.avatar-wrapper {
  margin-right: 30rpx;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.default-avatar {
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  color: #bbb;
}

.default-avatar:before {
  content: '\01F464';
}

.name-wrapper {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #fff;
}

.welcome {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.login-btn {
  background-color: transparent;
  color: #fff;
  font-size: 28rpx;
  padding: 5rpx 0;
  margin: 0;
  text-align: left;
  line-height: 1;
  padding-left: 0;
}

.profile-content {
  margin-top: -30rpx;
  border-radius: 30rpx 30rpx 0 0;
  background-color: #f7f7f7;
  padding: 30rpx;
  position: relative;
}

.section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.function-list {
  display: flex;
  flex-wrap: wrap;
}

.function-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.function-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10rpx;
}

.function-icon image {
  width: 50rpx;
  height: 50rpx;
}

.icon-placeholder {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.function-name {
  font-size: 26rpx;
  color: #333;
}

.about-list {
  background-color: #fff;
}

.about-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.about-item:last-child {
  border-bottom: none;
}

.about-left {
  display: flex;
  align-items: center;
}

.about-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.about-icon-placeholder {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #666;
}

.about-name {
  font-size: 28rpx;
  color: #333;
}

.about-right {
  color: #ccc;
}

.arrow {
  font-size: 28rpx;
}

.version-info {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
} 